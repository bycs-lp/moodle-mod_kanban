{{!
    @template mod_kanban/card

    Template for a card in the kanban board.

    Example context (json):
    {
        "id": 4,
        "kanban_column": 1,
        "title": "Task",
        "managecards": true,
        "hasassignees": false,
        "completed": true
    }
}}
<li class="mod_kanban_card card" id="mod_kanban_card-{{id}}" data-id="{{id}}" data-columnid="{{kanban_column}}">
    <div class="card-body">
        <div class="mod_kanban_card_title card-title">
            <span class="inplaceeditable inplaceeditable-text"{{#managecards}} data-inplaceeditable="1" data-component="mod_kanban" data-itemtype="card" data-itemid="{{id}}"
        data-value="{{title}}" data-type="text"{{/managecards}}>
                <a href="#" class="quickeditlink aalink"{{#managecards}} data-inplaceeditablelink="1"{{/managecards}}>
                {{title}}
                </a>
            </span>
        </div>
        <div class="mod_kanban_card_completion{{^completed}} hidden{{/completed}} text-success">
            {{#pix}} t/check, core, {{#str}} completed, core {{/str}} {{/pix}}
        </div>
        {{>mod_kanban/actionmenucard}}
        <div class="mod_kanban_duedate{{#completed}} hidden{{/completed}}" data-date="{{duedate}}">
        {{#duedate}}
            {{#userdate}} {{duedate}}, {{#str}} strftimedate, core_langconfig {{/str}} {{/userdate}}
        {{/duedate}}
        </div>
        <div class="mod_kanban_tags">
        </div>
    </div>
    <div class="card-footer mod_kanban_card_footer">
        <div class="mod_kanban_assignees" data-id="{{id}}">
            {{#hasassignees}}
                {{#assignees}}
                    {{>mod_kanban/user}}
                {{/assignees}}
            {{/hasassignees}}
        </div>
        <div class="mod_kanban_description{{^hasdescription}} hidden{{/hasdescription}}">
            <button class="mod_kanban_description_trigger btn btn-icon icon-no-margin p-0" data-toggle="modal" data-target="#mod_kanban_description_modal_{{id}}">
            {{#pix}} e/file-text, core, {{#str}} showdescription, mod_kanban {{/str}} {{/pix}}
            </button>
        </div>
        <div class="mod_kanban_description_modal modal fade" id="mod_kanban_description_modal_{{id}}" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">{{title}}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{{description}}}
                    </div>
                    <div class="modal-footer list-group">
                        {{#hasattachment}}
                            {{>mod_kanban/attachmentitems}}
                        {{/hasattachment}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>mod_kanban/addcard}}
</li>

{{#js}}
{{#managecards}}require(['core/inplace_editable']);{{/managecards}}
require(['mod_kanban/card'], function(component) {
    component.init('mod_kanban_card-{{id}}');
});
{{/js}}