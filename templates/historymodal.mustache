{{!
    @template mod_kanban/historymodal

    Example context (json):
    {
        "id": 4,
        "kanban_column": 1,
        "title": "Task"
    }
}}
<div class="mod_kanban_history_modal modal fade" id="mod_kanban_history_modal_{{id}}" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{#str}} history, mod_kanban {{/str}}: {{title}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="mod_kanban_loading_status" role="status">
                    {{> core/loading}} {{#str}} loadinghistory, mod_kanban {{/str}}
                </div>
                <div class="mod_kanban_history" data-id="{{id}}">
                </div>
            </div>
        </div>
    </div>
</div>