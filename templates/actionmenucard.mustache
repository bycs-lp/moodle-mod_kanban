{{!
    @template mod_kanban/actionmenucard

    Template for the action menu for cards.

    Example context (json):
    {
        "id": 4,
        "kanban_column": 1,
        "title": "Task",
        "managecards": true,
        "hasassignees": false,
        "completed": true,
        "selfassigned": false,
        "assignself": true
    }
}}
{{#managecards}}
<div class="mod_kanban_action_menu">
    <button class="mod_kanban_action_menu_trigger btn btn-icon icon-no-margin p-0 dropdown-toggle" data-toggle="dropdown">{{#pix}} i/menu, core, {{#str}} editcard, mod_kanban {{/str}} {{/pix}}</button>
    <ul class="dropdown-menu dropdown-menu-right">
        {{#assignself}}
        <li class="dropdown-item{{#selfassigned}} hidden{{/selfassigned}}">
            <a href="#" data-action="assign_self" data-id="{{id}}">{{#pix}} t/user, core, {{#str}} assignme, mod_kanban{{/str}} {{/pix}}{{#str}} assignme, mod_kanban{{/str}}</a>
        </li>
        <li class="dropdown-item{{^selfassigned}} hidden{{/selfassigned}}">
            <a href="#" data-action="unassign_self" data-id="{{id}}">{{#pix}} t/removecontact, core, {{#str}} unassignme, mod_kanban{{/str}} {{/pix}}{{#str}} unassignme, mod_kanban{{/str}}</a>
        </li>
        {{/assignself}}
        <li class="dropdown-item">
            <a href="#" data-action="delete_card" data-id="{{id}}">{{#pix}} t/delete, core, {{#str}} delete, core {{/str}} {{/pix}}{{#str}} delete, core {{/str}}</a>
        </li>
        <li class="dropdown-item {{#completed}}hidden{{/completed}}">
            <a href="#" data-action="complete_card" data-id="{{id}}">{{#pix}} t/check, core, {{#str}} complete, core {{/str}} {{/pix}}{{#str}} complete, core {{/str}}</a>
        </li>
        <li class="dropdown-item {{^completed}}hidden{{/completed}}">
            <a href="#" data-action="uncomplete_card" data-id="{{id}}">{{#pix}} t/reload, core, {{#str}} uncomplete, mod_kanban {{/str}} {{/pix}}{{#str}} uncomplete, mod_kanban {{/str}}</a>
        </li>
        <li class="dropdown-item">
            <a href="#" data-action="edit_details" data-id="{{id}}">{{#pix}} t/edit, core, {{#str}} editdetails, mod_kanban {{/str}} {{/pix}}{{#str}} editdetails, mod_kanban {{/str}}</a>
        </li>
    </ul>
</div>
{{/managecards}}