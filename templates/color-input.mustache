{{!
    @template mod_kanban/color-input

    Template for MoodleForm type "color"

    Example context (json):
    {
        "element": {
            "name": "color-input-id",
            "label": "Color",
            "id": "abc"
        }
    }
}}
<input type="color"
        class="form-control-color {{#error}}is-invalid{{/error}}"
        name="{{element.name}}"
        id="{{element.id}}"
{{#element.frozen}}
        readonly {{#element.hardfrozen}}disabled{{/element.hardfrozen}}
{{/element.frozen}}
        value="{{element.value}}"
        {{#element.size}}size="{{element.size}}"{{/element.size}}
        {{#error}}
            autofocus aria-describedby="{{element.iderror}}"
        {{/error}}
>
