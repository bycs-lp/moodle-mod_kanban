{{!
    @template mod_kanban/board

    Template for the whole kanban board.

    Example context (json):
    {
        "cmid": 12,
        "id": 2,
        "hascolumns": false,
        "locked": 0,
        "addcards": true,
        "managecolumns": false,
        "moveassignedcards": true,
        "moveallcards": false,
        "hastemplate": false,
        "istemplate": true,
        "hashistory": true
    }
}}
<div class="container-fluid mod_kanban_board {{#locked}}mod_kanban_board_locked_columns{{/locked}} {{#addcard}}mod_kanban_addcards{{/addcard}} {{#managecolumns}}mod_kanban_managecolumns{{/managecolumns}} {{#moveassignedcards}}mod_kanban_moveassignedcards{{/moveassignedcards}} {{#moveallcards}}mod_kanban_moveallcards{{/moveallcards}} {{#hastemplate}}mod_kanban_hastemplate{{/hastemplate}} {{#istemplate}}mod_kanban_istemplate{{/istemplate}} {{#history}}mod_kanban_history{{/history}}" id="mod_kanban_board-{{id}}" data-id="{{id}}" data-cmid="{{cmid}}">
    <div class="row mod_kanban_board_menu" data-id="{{id}}">
        <div class="col-8 mod_kanban_heading">
            <h3>{{heading}}</h3>
        </div>
        <div class="col mod_kanban_action_menu">
            {{>mod_kanban/actionmenuboard}}
        </div>
    </div>
    <div class="row mod_kanban_main">
        <ul class="row mod_kanban_column_container" id="mod_kanban_board-{{id}}" data-id="{{id}}" data-cmid="{{cmid}}">
            <li class="mod_kanban_addcolumn_first">
                {{>mod_kanban/addcolumn}}
            </li>
            {{#hascolumns}}
                {{#columns}}
                    {{>mod_kanban/column}}
                {{/columns}}
            {{/hascolumns}}
        </ul>
    </div>
</div>
{{#js}}
require(['core/inplace_editable']);
require(['mod_kanban/board'], function(component) {
    component.init('mod_kanban_board-{{id}}');
});
{{/js}}